<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@layout/activity_splash</item>
    </style>

    <style name="Title">
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button">
        <item name="backgroundTint">@color/colorAccentDark</item>
        <item name="android:textColor">@color/textAccent</item>
    </style>

    <style name="TextProfile">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AccentTextProfile" parent="TextProfile">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PrimaryTextProfile" parent="TextProfile">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="EditTextProfile">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
